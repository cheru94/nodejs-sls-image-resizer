{
  "name": "nodejs-rest-api-sls-ddd",
  "version": "1.0.0",
  "description": "nodeJS Rest API with Serverless Framework & Domain Driven Design",
  "scripts": {
    "boot-load": "npm i && npx husky install",
    "deploy": "sls deploy",
    "start:dev": "export NODE_ENV=test && sls offline start",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "devDependencies": {
    "eslint": "^8.14.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^6.0.0",
    "jest": "^27.5.1",
    "jest-html-reporters": "^3.0.6",
    "prettier": "^2.2.1",
    "serverless": "^3.7.1",
    "serverless-compose": "^2.4.0",
    "serverless-iam-roles-per-function": "^3.2.0"
  },
  "dependencies": {
    "aws-sdk": "^2.1076.0",
    "axios": "^0.26.0",
    "jsonschema": "^1.4.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-s3-local": "^0.6.22",
    "uuid": "^8.3.2"
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "src/request/domain/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/path/to/dir/"
    ],
    "reporters": [
      "default",
      [
        "./node_modules/jest-html-reporters",
        {
          "pageTitle": "Test Report"
        }
      ]
    ]
  }
}
